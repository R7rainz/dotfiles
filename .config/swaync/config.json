{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "left",
  "positionY": "bottom",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-margin-top": 20,
  "control-center-margin-bottom": 20,
  "control-center-margin-right": 20,
  "control-center-margin-left": 20,
  "notification-body-image-height": 140,
  "timeout": 6,
  "notification-window-width": 420,
  "timeout-low": 3,
  "timeout-critical": 0,
  "control-center-width": 420,
  "control-center-height": 950,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "widgets": [
    "dnd",
    "buttons-grid",
    "mpris",
    "volume",
    "backlight",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": " Notifications",
      "clear-all-button": true,
      "button-text": ""
    },
    "dnd": {
      "text": "󰂛 Do Not Disturb"
    },
    "mpris": {
      "image-size": 60,
      "image-radius": 8
    },
    "volume": {
      "label": ""
    },
    "backlight": {
      "label": "󰃠",
      "device": "amdgpu_bl2"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "",
          "command": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
          "type": "toggle"
        },
        {
          "label": "",
          "command": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
          "type": "toggle"
        },
        {
          "label": "󰤨",
          "command": "nm-connection-editor"
        },
        {
          "label": "󰂯",
          "command": "blueman-manager"
        },
        {
          "label": "󱡽",
          "command": "bash -c $HOME/.config/hypr/scripts/airplaneMode.sh",
          "type": "toggle"
        },
        {
          "label": "",
          "command": "hyprlock"
        },
        {
          "label": "",
          "command": "~/.config/hypr/scripts/wlogout.sh"
        },
        {
          "label": "",
          "command": "shutdown now"
        }
      ]
    }
  }
}
