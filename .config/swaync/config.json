{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "center",
  "positionY": "bottom",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-margin-top": 15,
  "control-center-margin-bottom": 15,
  "control-center-margin-right": 20,
  "control-center-margin-left": 20,
  "notification-body-image-height": 120,
  "timeout": 4,
  "notification-window-width": 380,
  "timeout-low": 2,
  "timeout-critical": 0,
  "control-center-width": 400,
  "control-center-height": 800,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 180,
  "hide-on-clear": true,
  "hide-on-action": true,
  "widgets": [
    "dnd",
    "title",
    "volume",
    "backlight",
    "mpris",
    "buttons-grid",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": " Notifications",
      "clear-all-button": true,
      "button-text": ""
    },
    "dnd": {
      "text": "󰂛 Do Not Disturb",
      "background": "rgba(25,25,25,0.8)",
      "foreground": "rgba(255,255,255,0.9)",
      "border-radius": 10,
      "padding": 8
    },
    "mpris": {
      "image-size": 64,
      "image-radius": 12,
      "show-controls": true,
      "padding": 10
    },
    "volume": {
      "label": "",
      "command-up": "~/.config/hypr/scripts/volume_up.sh",
      "command-down": "~/.config/hypr/scripts/volume_down.sh",
      "command-toggle": "~/.config/hypr/scripts/volume_toggle.sh",
      "bar-color": "rgba(0,190,255,1)",
      "bar-background": "rgba(50,50,50,0.5)",
      "bar-height": 8,
      "icon-size": 24
    },
    "backlight": {
      "label": "󰃠",
      "device": "amdgpu_bl2",
      "command-up": "~/.config/hypr/scripts/backlight_up.sh",
      "command-down": "~/.config/hypr/scripts/backlight_down.sh",
      "bar-color": "rgba(255,200,0,1)",
      "bar-background": "rgba(50,50,50,0.5)",
      "bar-height": 8,
      "icon-size": 24
    },
    "buttons-grid": {
      "columns": 4,
      "spacing": 12,
      "actions": [
        {
          "label": "",
          "command": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
          "type": "toggle"
        },
        {
          "label": "",
          "command": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
          "type": "toggle"
        },
        {
          "label": "󰤨",
          "command": "nm-connection-editor"
        },
        {
          "label": "󰂯",
          "command": "blueman-manager"
        },
        {
          "label": "󱡽",
          "command": "bash -c $HOME/.config/hypr/scripts/airplaneMode.sh",
          "type": "toggle"
        },
        {
          "label": "",
          "command": "hyprlock"
        },
        {
          "label": "",
          "command": "~/.config/hypr/scripts/wlogout.sh"
        },
        {
          "label": "",
          "command": "shutdown now"
        }
      ]
    }
  }
}
