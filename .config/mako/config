# Mako macOS-Style Configuration
# Notification appearance - macOS inspired
font=Dank Mono Nerd Font
width=380
height=110
margin=12
padding=16,18
border-size=0
border-radius=14

# macOS dark background with subtle transparency
background-color=#1c1c1eF5
text-color=#f5f5f7
border-color=#00000000

# Progress bar styling - macOS blue accent
progress-color=over #007AFFCC

# Icons - macOS style
icons=1
max-icon-size=48
icon-location=left

# Behavior - macOS timing
default-timeout=4000
ignore-timeout=0
layer=overlay

# Grouped notifications - macOS style stacking
group-by=app-name
max-visible=5

# Typography and formatting
markup=1
actions=1
format=<b>%s</b>\n%b
text-alignment=left

# Positioning - top right like macOS
anchor=top-right

# Urgency levels - macOS inspired
[urgency=low]
background-color=#1c1c1eE6
text-color=#98989d
border-color=#00000000

[urgency=normal]
background-color=#1c1c1eF5
text-color=#f5f5f7
border-color=#00000000

[urgency=critical]
background-color=#2c1c1cF5
text-color=#ffffff
border-color=#ff453a40
default-timeout=0

