# Mako Glassy Configuration

# Notification appearance
font=Inter 11
width=350
height=150
margin=20
padding=15,20
border-size=1
border-radius=12

# Glassy translucent colors
background-color=#1a1a1aCC
text-color=#e0e0e0
border-color=#ffffff30

# Progress bar styling
progress-color=over #88888888

# Icons
icons=1
max-icon-size=64

# Behavior
default-timeout=5000
ignore-timeout=0
layer=overlay

# Grouped notifications
group-by=app-name
max-visible=3

# Urgency levels with glassy effect
[urgency=low]
background-color=#1a1a1aB3
border-color=#4a90e220
text-color=#b0b0b0

[urgency=normal]
background-color=#1a1a1aCC
border-color=#ffffff30
text-color=#e0e0e0

[urgency=critical]
background-color=#2a1a1aDD
border-color=#ff5555AA
text-color=#ffffff
default-timeout=0

# App-specific styling (optional examples)
[app-name="Spotify"]
border-color=#1db95490

[app-name="Discord"]
border-color=#5865f290

# Animations and positioning
anchor=top-right

# Additional glassy effects
markup=1
actions=1
format=<b>%s</b>\n%b
