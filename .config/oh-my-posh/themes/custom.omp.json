{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{if .Root}} ‚ö° {{end}}{{.Folder | replace \"~\" \"üè†\"}} @ {{.HostName}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "powerline",
          "background": "#0a0a0a",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .Icon }} "
        },
        {
          "type": "root",
          "style": "powerline",
          "background": "#1a1a1a",
          "foreground": "#ff6b6b",
          "powerline_symbol": "\ue0b0",
          "template": " \uf0e7 "
        },
        {
          "type": "session",
          "style": "powerline",
          "background": "#2a2a2a",
          "foreground": "#e5e7eb",
          "powerline_symbol": "\ue0b0",
          "template": " R A I N Z ‚òÅÔ∏è "
        },
        {
          "type": "path",
          "style": "powerline",
          "background": "#3a3a3a",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_icon": "...",
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "\ueb06",
            "style": "agnoster_short"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "background": "#1f1f1f",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#4a4a4a{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#525252{{ end }}",
            "{{ if gt .Ahead 0 }}#404040{{ end }}",
            "{{ if gt .Behind 0 }}#363636{{ end }}"
          ],
          "foreground": "#d1d5db",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "background": "#0f0f0f",
          "foreground": "#9ca3af",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04"
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "background": "#262626",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .FormattedMs }}s ",
          "properties": {
            "style": "dallas",
            "threshold": 500
          }
        },
        {
          "type": "status",
          "style": "plain",
          "background": "#1a1a1a",
          "background_templates": [
            "{{ if gt .Code 0 }}#2d1b1b{{ else }}#1a2d1b{{ end }}"
          ],
          "foreground": "#ffffff",
          "template": " {{ if gt .Code 0 }}\uf12a{{ else }}\uf00c{{ end }} {{ if gt .Code 0 }}{{ reason .Code }}{{ else }}OK{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#4a5568",
          "template": "‚ùØ "
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
