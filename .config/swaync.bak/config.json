    }
  ],
  "widgets": {
    "control-center": [
      "title",
      "dnd",
      "mpris",
      "notifications"
    ],
    "notification-popup": [
      "app-icon",
      "summary",
      "body",
      "time",
      "actions"
    ]
  },
  "dnd-indicator": {
    "text": "âš½ Match Mode - No Distractions",
