      },
      "urgency": "Normal",
      "default-timeout": 8000,
      "script": "match-update"
    },
    {
      "criteria": {
        "app-name": "google-chrome"
      },
      "urgency": "Normal",
      "default-timeout": 8000,
      "script": "match-update"
    },
    {
      "criteria": {
        "summary": "*goal*"
      },
      "urgency": "Critical",
      "default-timeout": 10000,
      "script": "goal-notification"
    },
    {
      "criteria": {
        "summary": "*match*"
      },
      "urgency": "Normal",
      "default-timeout": 8000,
      "script": "match-alert"
    },
    {
